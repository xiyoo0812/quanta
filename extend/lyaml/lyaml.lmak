--工程名字
PROJECT_NAME = "lyaml"

--目标名字
TARGET_NAME = "lyaml"

----工程类型: static/dynamic/exe
PROJECT_TYPE = "dynamic"

--需要的include目录
INCLUDES = {
    "./src",
    "../lua/lua",
    "../luakit/include"
}

DEFINES = {
    "YAML_DECLARE_EXPORT"
}

--需要连接的库文件
LIBS = {
    "lua"
}

--WINDOWS需要定义的选项
WINDOWS_DEFINES = {
    "LUA_BUILD_AS_DLL"
}

--依赖项目
DEPS = {
    "lualib"
}

--分组定义
GROUP = "luaext"
