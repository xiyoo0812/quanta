--工程名字
PROJECT_NAME = "ldetour"

--目标名字
TARGET_NAME = "ldetour"

----工程类型: static/dynamic/exe
PROJECT_TYPE = "dynamic"

FLAGS = {
    "Wno-class-memaccess"
}

--需要的include目录
INCLUDES = {
    "src/detour",
    "../lua/lua",
    "../luakit/include"
}

--WINDOWS需要定义的选项
WINDOWS_DEFINES = {
    "LUA_BUILD_AS_DLL"
}

--需要连接的库文件
LIBS = {
    "lua"
}

--依赖项目
DEPS = {
    "lualib"
}

--分组定义
GROUP = "luaext"
