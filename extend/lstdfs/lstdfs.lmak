--工程名字
PROJECT_NAME = "lstdfs"

--目标名字
TARGET_NAME = "lstdfs"

----工程类型: static/dynamic/exe
PROJECT_TYPE = "dynamic"

--需要的include目录
INCLUDES = {
    "../lua/lua",
    "../luakit/include"
}

--需要连接的库文件
LIBS = {
    "lua"
}

--LINUX需要连接的库文件
--gcc9.1前filesystem需要链接stdc++fs
LINUX_LIBS = {
    "stdc++fs"
}

--WINDOWS需要定义的选项
WINDOWS_DEFINES = {
    "LUA_BUILD_AS_DLL"
}

--依赖项目
DEPS = {
    "lualib"
}

--分组定义
GROUP = "extend"
