--工程名字
PROJECT_NAME = "luna"

--目标名字
TARGET_NAME = "luna"

--工程类型：static/dynamic/exe
PROJECT_TYPE = "dynamic"

--标准库版本
---std=gnu99/-std=c++11/-std=c++14
STDC = "-std=c++11"

--需要的include目录
INCLUDES = {
	"../../extend/luaext/lua/lua"
}

--目标文件前缀
LIB_PREFIX = 1

--需要连接的库文件
LIBS = {
	"lua"
}

--依赖项目
DEPS = {
	"lualib"
}

--分组定义
GROUP = "core"