--工程名字
PROJECT_NAME = "luabus"

--目标名字
TARGET_NAME = "luabus"

--工程类型: static/dynamic/exe
PROJECT_TYPE = "dynamic"

--是否生效
ENABLE = true

--需要的include目录
INCLUDES = {
    "../../extend/lua/lua",
    "../../extend/ltimer/ltimer",
    "../../extend/luakit/include"
}

--需要连接的库文件
LIBS = {
    "lua",
}

--WINDOWS需要定义的选项
WINDOWS_DEFINES = {
    "LUA_BUILD_AS_DLL"
}

--依赖项目
DEPS = {
    "lualog"
}

--分组定义
GROUP = "core"