--工程名字
PROJECT_NAME = "luabus"

--目标名字
TARGET_NAME = "luabus"

----工程类型: static/dynamic/exe
PROJECT_TYPE = "dynamic"

--需要的FLAGS
FLAGS = {
	"Wno-unused-variable",
	"Wno-unused-parameter",
	"Wno-unused-but-set-parameter"
}

--需要的include目录
INCLUDES = {
	"../luna/src",
	"../../extend/luaext/lua/lua"
}

--是否启用mimalloc库
MIMALLOC_DIR = "../../extend/mimalloc/mimalloc/include"

--需要连接的库文件
LIBS = {
	"lua",
	"luna"
}

--依赖项目
DEPS = {
	"luna",
	"lualib"
}

--分组定义
GROUP = "core"