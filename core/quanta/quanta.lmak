--工程名字
PROJECT_NAME = "quanta"

--目标名字
TARGET_NAME = "quanta"

----工程类型: static/dynamic/exe
PROJECT_TYPE = "exe"

--c++11/c++14/c++17/c++20
STDCPP = "c++17"

--需要的FLAGS
FLAGS = {
	"fpermissive",
	"Wno-unused-variable",
	"Wno-unused-parameter",
	"Wno-unused-but-set-parameter"
}

--需要的include目录
INCLUDES = {
	"../../extend/lua/lua",
	"../../extend/sol2/include"
}

--需要连接的库文件
LIBS = {
	"lua",
}

--依赖项目
DEPS = {
	"luabus"
}

--分组定义
GROUP = "core"
