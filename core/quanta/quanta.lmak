--工程名字
PROJECT_NAME = "quanta"

--目标名字
TARGET_NAME = "quanta"

----工程类型: static/dynamic/exe
PROJECT_TYPE = "exe"

--需要的FLAGS
FLAGS = {
	"fpermissive",
	"Wno-unused-variable",
	"Wno-unused-parameter",
	"Wno-unused-but-set-parameter"
}

--需要定义的选项
DEFINES = {
	"FMT_HEADER_ONLY"
}

--需要的include目录
INCLUDES = {
	"../../extend/lua/lua",
	"../../extend/fmt/include",
	"../../extend/luakit/include",
	"../../extend/lualog/lualog"
}

--需要连接的库文件
LIBS = {
	"lua",
}

--LINUX需要连接的库文件
--gcc9.1前filesystem需要链接stdc++fs
LINUX_LIBS = {
	"stdc++fs"
}

--依赖项目
DEPS = {
	"luabus"
}

--分组定义
GROUP = "core"
